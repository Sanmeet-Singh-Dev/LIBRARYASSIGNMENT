<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FeedbackActivity">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="329dp"
            android:layout_height="70dp"
            android:text="Feedback Form"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.086" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fbRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="158dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fbeRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rating Out Of 10" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fbName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/fbRating"
            tools:layout_editor_absoluteX="207dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fbeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fbMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/fbName"
            tools:layout_editor_absoluteX="188dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fbeMessage"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:textAlignment="textStart" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="192dp"
            android:layout_height="41dp"
            android:text="Message:"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/fbMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fbName"
            app:layout_constraintVertical_bias="0.538" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="287dp"
            android:layout_height="39dp"
            android:text="SUBMIT"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fbMessage"
            app:layout_constraintVertical_bias="0.772" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
